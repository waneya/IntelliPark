<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:id="@+id/bay_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingTop="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/bay_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bay_address_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingBottom="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/bay_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textStyle="italic" />
    </LinearLayout>

    <include layout="@layout/restrictions" />

    <!--    <TextView-->
    <!--        android:id="@+id/bay_snippet"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:padding="@dimen/activity_margin"-->
    <!--       />-->

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0.2dp"-->
<!--        android:background="@android:color/darker_gray"/>-->


    <TableLayout
        android:id="@+id/alertDialogLoginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="*">
        <TableRow
            android:layout_margin="10dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <Button
                android:id="@+id/btn_direction"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
                android:text="  Navigate"
                android:textAlignment="textStart"
                android:layout_margin="1dp"
                android:textColor="#fff"
                android:drawableStart="@drawable/ic_navigate"
                android:paddingStart="10dp"/>


            <Button
                android:id="@+id/btn_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
                android:text="  Park"
                android:layout_margin="1dp"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:drawableStart="@drawable/ic_parking"
                android:paddingStart="10dp"
                />


            <!--    </LinearLayout>-->
        </TableRow>
    </TableLayout>
    <!--    <TextView-->
    <!--        android:id="@+id/bay_restriction"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        />-->

</LinearLayout>
